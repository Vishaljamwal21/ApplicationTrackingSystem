@model ApplicationTrackingSystem.Models.JobPost

@{
    ViewData["Title"] = "Create Job Post";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Job Post Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CandidateSkill" class="control-label"></label>
                            <textarea asp-for="CandidateSkill" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="CandidateSkill" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Experience" class="control-label"></label>
                            <textarea asp-for="Experience" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Qualification" class="control-label"></label>
                            <textarea asp-for="Qualification" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Qualification" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="FromDate" class="control-label"></label>
                                <input asp-for="FromDate" class="form-control" type="date" />
                                <span asp-validation-for="FromDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ToDate" class="control-label"></label>
                                <input asp-for="ToDate" class="form-control" type="date" />
                                <span asp-validation-for="ToDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
