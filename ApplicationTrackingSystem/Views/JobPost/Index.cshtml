    @model IEnumerable<ApplicationTrackingSystem.Models.JobPost>

    @{
        ViewData["Title"] = "Job Posts";
        var todayDate = ViewBag.TodayDate as string;
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ApplicationTrackingSystem</title>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mt-4 mb-2">
                <h2>@ViewData["Title"]</h2>
                <div>
                    <strong>Today's Date:</strong> @todayDate
                </div>
            </div>
            <table id="jobPostsTable" class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Candidate Skill</th>
                        <th>Experience</th>
                        <th>Qualification</th>
                        <th>Description</th>
                        <th>FromDate</th>
                        <th>ToDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var jobPost in Model)
                    {
                        <tr>
                            <td>@jobPost.Title</td>
                           @*  <td>@jobPost.CandidateSkill</td> *@

                        <td class="truncate" data-full-text="@jobPost.CandidateSkill">
                            @{
                                if (!string.IsNullOrEmpty(jobPost.CandidateSkill))
                                {
                                    string truncatedText = jobPost.CandidateSkill.Length > 5 ? jobPost.CandidateSkill.Substring(0, 5) + "..." : jobPost.CandidateSkill;
                                    @truncatedText
                                }
                            }
                        </td>


                        <td class="truncate" data-full-text="@jobPost.Experience">
                            @{
                                if (!string.IsNullOrEmpty(jobPost.Experience))
                                {
                                    string truncatedText = jobPost.Experience.Length > 5 ? jobPost.Experience.Substring(0, 5) + "..." : jobPost.Experience;
                                    @truncatedText
                                }
                            }
                        </td>

                        <td class="truncate" data-full-text="@jobPost.Qualification">
                            @{
                                if (!string.IsNullOrEmpty(jobPost.Qualification))
                                {
                                    string truncatedText = jobPost.Qualification.Length > 5 ? jobPost.Qualification.Substring(0, 5) + "..." : jobPost.Qualification;
                                    @truncatedText
                                }
                            }
                        </td>
                        
                        <td style="word-wrap: break-word; max-width: 300px;">
                            @if (!string.IsNullOrEmpty(jobPost.Description))
                            {
                                string[] words = jobPost.Description.Split(' ');
                                if (words.Length > 30)
                                {
                                    for (int i = 0; i < 10; i++)
                                    {
                                        @words[i]
                                    }
                                    <br />
                                    for (int i = 10; i < 20; i++)
                                    {
                                        @words[i]
                                    }
                                    <span>...</span>
                                }
                                else
                                {
                                    @jobPost.Description
                                }
                            }
                        </td>
                        

                            <td>@jobPost.FromDate</td>
                            <td>@jobPost.ToDate</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-success" asp-route-id="@jobPost.Id">Edit</a> |
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@jobPost.Id">Delete</a>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Create" class="btn btn-primary">Create</a>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#jobPostsTable').DataTable();
            });
        </script>

    </body>
    </html>
