@model ApplicationTrackingSystem.Models.FormLinks

@{
    ViewData["Title"] = "Create or Edit Form Link";
}

<h2>@(Model.Id == 0 ? "Create" : "Edit") Form Link</h2>

<h4>FormLinks</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateOrEdit" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Links" class="control-label"></label>
                <input asp-for="Links" class="form-control" />
                <span asp-validation-for="Links" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(Model.Id == 0 ? "Create" : "Save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
